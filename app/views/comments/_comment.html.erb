<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to "Delete comment", [comment.article, comment], data: {
    turbo_confirm: "Are you sure?",
    turbo_method: :delete
  } %>
  </p>
<% end %>